---
import '../css/fonts.css'
import '../css/variables.css'
import Navigation from '../components/Navigation.astro'
import Navigation2 from '../components/Navigation2.astro'
import Footer from '../components/Footer.astro'
---


<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro</title>
    </head>
    <body>
        <!-- <Navigation /> -->
        <Navigation2 />
        <h2>Contact me below!</h2>
        <div>
            <form action="">
                <label for="name-input">Your First-name:</label>
                <input type="text" id="name-input" name="first-name" placeholder="Firstname">
                
            </form>
    
            <form action="">
                <label for="last-name-input">Your Last-name:</label>
                <input type="text" id="last-name-input" name="last-name" placeholder="Lastname">
                
            </form>
    
            <form action="">
                <label for="email-input">Your eMail:</label>
                <input type="email" id="email-input" name="email-name" placeholder="Email">
                
            </form>

            <form action="">
                <label for="subject-input">Your Subject:</label>
                <input type="text" id="email-input" name="email-name" placeholder="Subject">
                
            </form>
    
            <form action="">
                <label for="text"></label>
                <textarea name="work-experience" rows="5" cols="45"></textarea>
                
            </form>
            <button type="submit">Submit<i></i></button>
        </div>

        <Footer />
    </body>
</html>

<style>
    body{
        background-color: rgb(230, 230, 230);
    }

    h2{
        font-size: 3rem;
        text-align: center;
        padding: 30px;
    }



    div{
        display: flex;
        flex-direction: column;
        align-items: center;

        border: 1px red solid;
        padding: 50px;

    }

    form>*{
        display: flex;
    }   

    input{


        color: var(--blue);
        /* background-color: var(--bg-grey); */
        padding: 15px;
        margin: 10px;
        

    }

    button{
        color: var(--primary);
        border-right: 2px solid var(--primary);
        border-bottom: 2px solid var(--primary);
        padding: 10px 20px;
        box-shadow: 4px 4px 0px 0px;
        border-radius: 8px;
        
    }

    button:hover{
        color: var(--highlight);
        background-color: var(--primary);
        box-shadow: 4px 4px 0px 0px;
    }
</style>
