<nav>
  <div class="search-input">
    <input type="text" placeholder="search" />
  </div>
  <ul>
    <div class="links">
      <li><a href="/">Home</a></li>
      <li><a href="/aboutMe">About</a></li>
      <li><a href="/inventory">Inventory</a></li>
      <li><a href="/contact">Contact</a></li>
    </div>
  </ul>
  <div class="shop-icons">
    <i class="fa-solid fa-bag-shopping"></i>
    <i class="fa-solid fa-truck"></i>
    <i class="fa-solid fa-receipt"></i>
    <i class="fa-solid fa-user"></i>
  </div>
</nav>

<style>
  nav {
    background-color: var(--bg-color);

    z-index: 10;

    width: 100vw;
    height: 10vh;

    display: flex;
    justify-content: space-around;
  }

  input {
    border-radius: 15px;
  }

  input[placeholder] {
    text-align: center;
  }

  .search-input {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  ul {
    list-style-type: none;
    margin: 0 15px;
  }

  .links {
    display: flex;
    justify-content: end;
  }

  li {
    padding: 10px 15px;
    font-family: "Montserrat_Alternates";
    font-weight: 600;
    color: var(--primary);
  }

  li:hover {
    border-bottom: 2px white solid;
  }

  i{
    color: var(--primary);
  }

  /* Media Queries zum Überschreiben von CSS-Regeln */


  /* Smartphone-Design <640px */
  @media (max-width: 640px) {
    h3 {
      background-color: yellow;
    }
    nav {
      width: 100vw;
      position: fixed;
      bottom: 0;

      justify-content: center;
    }

    input {
      display: none;
    }
  }

  /* Smartphones im Querformat */
  @media (max-width: 640px) {
    h3 {
      background-color: orange;
    }

    nav {
      position: fixed;
      bottom: 0;

      justify-content: center;
    }

    input {
      display: none;
    }
  }

  /* Tablets Hochformat */
  @media (max-width: 768px) {
    h3 {
      background-color: red;
    }

    nav {
      position: fixed;
      top: 0;
      height: 50px;
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }

    input {
      display: block;
    }
  }

  /* Tablets Querformat & kleine Monitore */
  @media (max-width: 1024px) {
    h3 {
      background-color: blue;
    }
    nav {
      position: fixed;
      top: 0;
      height: 50px;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    input {
      display: block;
    }
  }

  /* Große Monitore */
  @media (min-width: 1280px) {
    h3 {
      background-color: green;
    }

    nav{
      position: fixed;
      top: 0;
      height: 50px;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    input{
      display: block;
    }
  }
</style>
